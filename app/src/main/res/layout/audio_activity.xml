<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6d3d3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >


    <TextView
        android:id="@+id/txv_audio1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduccion"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play"
        android:id="@+id/btn_start"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="100dp"
        />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_pause"
        android:src="@drawable/pause"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="160dp"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_stop"
        android:src="@drawable/stop"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="220dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Crear proyecto"
        android:id="@+id/txv_audio2"
        android:layout_marginTop="190dp"
        android:layout_gravity="center_horizontal"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play"
        android:id="@+id/btn_start2"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="100dp"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pause"
        android:id="@+id/btn_pause2"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="160dp"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/stop"
        android:id="@+id/btn_stop2"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="220dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Primera ventana"
        android:id="@+id/txv_audio3"
        android:layout_marginTop="350dp"
        android:layout_gravity="center_horizontal"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play"
        android:id="@+id/btn_start3"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="100dp"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pause"
        android:id="@+id/btn_pause3"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="160dp"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/stop"
        android:id="@+id/btn_stop3"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="220dp"/>

</FrameLayout>
